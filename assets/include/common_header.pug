				span.p-header-button--menu__icon
				span.c-header-button__text.p-header-button--menu__text
		button#search-button.c-header-button.p-header-button--search.u-hidden-sm(type="button",aria-label="サイト内検索ボックスを展開",aria-controls="searh-content",aria-expanded="false")
